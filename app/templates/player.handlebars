{{view SF.PlayerGrippyView}}
<div id="jquery_jplayer_1" class="jp-jplayer"></div>
<div id="jp_container_1" class="jp-audio">
  <div class="jp-controls">
    <a href="javascript:;" class="jp-play" tabindex="1"><i class="icon-play"></i></a>
    <a href="javascript:;" class="jp-pause" tabindex="1"><i class="icon-pause"></i></a>
  </div>
  <div class="jp-progress"><div class="jp-play-bar"></div></div>
  <div class="jp-no-solution"><span>Update Required</span>To play the media you will need to either update your browser to a recent version or update your <a href="http://get.adobe.com/flashplayer/" target="_blank">Flash plugin</a>.</div>
</div>
<div class="song-info">
  {{#if SF.playerController.content.name}}
    <div class="song-name">{{SF.playerController.content.name}}</div>
    <div class="song-artist">{{SF.playerController.content.artist}}</div>
    <div class="song-description">{{SF.playerController.content.description}}</div>
  {{else}}
    <div class="song-description">No song currently selected</div>
  {{/if}}
</div>
<div class="ratings-container">
  <div class="row-fluid">
    <div class="ratings-label">vocals</div>
    {{#view SF.RatingSliderView}}
      <div class="rating vocals" cat="vocals"></div>
      <div class="hoverer vocals"></div>
      <div class="reflection vocals"></div>
    {{/view}}
  </div>
  <div class="row-fluid">
    <div class="ratings-label">songwriting</div>
    {{#view SF.RatingSliderView}}
      <div class="rating songwriting" cat="songwriting"></div>
      <div class="hoverer songwriting"></div>
      <div class="reflection songwriting"></div>
    {{/view}}
  </div>
  <div class="row-fluid">
    <div class="ratings-label">musicianship</div>
    {{#view SF.RatingSliderView}}
      <div class="rating musicianship" cat="musicianship"></div>
      <div class="hoverer musicianship"></div>
      <div class="reflection musicianship"></div>
    {{/view}}
  </div>
  <div class="row-fluid">
    <div class="ratings-label">creativity</div>
    {{#view SF.RatingSliderView}}
      <div class="rating creativity" cat="creativity"></div>
      <div class="hoverer creativity"></div>
      <div class="reflection creativity"></div>
    {{/view}}
  </div>
  <div class="row-fluid">
    <div class="ratings-label">production</div>
    {{#view SF.RatingSliderView}}
      <div class="rating production" cat="production"></div>
      <div class="hoverer production"></div>
      <div class="reflection production"></div>
    {{/view}}
  </div>
  <div class="row-fluid">
    <div class="ratings-label">overall</div>
    {{#view SF.RatingSliderView}}
      <div class="rating overall" cat="overall"></div>
      <div class="hoverer overall"></div>
      <div class="reflection overall"></div>
    {{/view}}
  </div>
</div>
<div class="feedback-form-bottom">
  {{view Ember.TextArea valueBinding="SF.playerController.comment" placeholder="Comment"}}
  <button type="submit" {{bindAttr class=":btn SF.playerController.canSubmit"}} {{action "submitFeedback" target="SF.playerController"}}>Submit Feedback</button>
  <div class="confirm-feedback alert alert-success">Thanks! You have successfully reviewed this song!</div>
</div>
