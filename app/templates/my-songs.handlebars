<div class="row-fluid">
  {{#with SF.loginController.content}}
  <h3 class="no-bottom-margin">{{firstName}} {{lastName}}</h3>
  <p class="thin-text">{{description}}</p>
  {{/with}}
</div>
<div class="row-fluid">
{{#each song in controller.songs}}
  <div class="row-fluid song-list-item-container">
    <div class="song-list-item">
      <div class="span5">
        <h4>{{#linkTo song song}}{{song.name}}{{/linkTo}} <small>{{this.artist}}</small></h4>
        <p class="hidden-phone">{{song.description}}</p>  
      </div>
      <div class="span5 hidden-phone">
        <h4><small>Overall Average: </small>{{song.overall}}</h4>
        <h5><small>Total Reviews: </small>{{song.reviewCount}} <small>Total Comments: </small>{{song.commentCount}}</h5> 
      </div>
      <div class="span2">      
        <div class="hidden-phone pull-right">
          <h5>{{song.genre.name}}</h5>
          <p>{{mdy song.date}}</p>
        </div>
        <div class="visible-phone">
          <h5>{{song.genre.name}} <small>{{mdy song.date}}</small></h5>
        </div>
      </div>
    </div>
  </div>
{{/each}}
</div>